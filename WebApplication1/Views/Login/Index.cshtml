@model Hospital.Models.User

@{
    ViewBag.Title = "Вхід";
    Layout = "_Layout";
}

<h4>Вхід у систему</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:100px">Увійти</button>
            </div>
            <br />
            <div>
                <p>Відсутній акаунт? <a asp-controller="Signup" asp-action="Index"><b>Реєстрація</b></a></p>
            </div>
        </form> 
    </div>
</div>

